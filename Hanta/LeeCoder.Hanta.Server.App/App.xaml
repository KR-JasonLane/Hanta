<Application x:Class="LeeCoder.Hanta.Server.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LeeCoder.Hanta.Server.App">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--ViewModel과 View를 맵핑시켜 Content에 등록 된 ViewModel에 대한 View를 호출-->
                <ResourceDictionary Source="/LeeCoder.Hanta.Server.App;component/ResourceDictionary/MappingDictionary.xaml"/>

                <!--Material Design 라이브러리 리소스 등록-->
                <ResourceDictionary Source="/LeeCoder.Hanta.Design;component/ResourceDictionary/MaterialDesignDictionary.xaml"/>

                <!--한타 스타일 정의 리소스 등록-->
                <ResourceDictionary Source="/LeeCoder.Hanta.Design;component/ResourceDictionary/HantaStyleDictionary.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>         
    </Application.Resources>
</Application>
